<body>
    <%- include('partials/navbar.ejs')%>
    <div class="container">
        <div class="card" id="formask">
            <div class="card-header">
                <h3>Just ask!</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/questionsaved">
                    <label>Title</label>
                    <input type="text" placeholder="Title" class="form-control" name="title">
                    <br>
                    <label>Description</label>
                    <textarea placeholder="Write your question!" class="form-control" name="description"></textarea>
                    <br>
                    <button class="btn btn-primary">Ask!</button>
                </form>
            </div>
        </div>
    </div>
</body>
